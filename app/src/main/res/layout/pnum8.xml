<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282220">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginLeft="150dp"
            android:text="PHP"
            android:textColor="#FFFBFA"
            android:textSize="36dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="Connect to MYSQL"
            android:textColor="#FFFBFA"
            android:textSize="36dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_marginLeft="20dp"
            android:text="Open a Connection to MySQL"
            android:textColor="#FFFBFA"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="-350dp"
            android:layout_width="350dp"
            android:layout_height="130dp"
            android:layout_marginLeft="20dp"
            android:text="Before we can access data in the MySQL database, we need to be able to connect to the server:"
            android:textColor="#FFFBFA"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="340dp"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFBFA"
            android:text="Example (MySQLi Object-Oriented)"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>



    </LinearLayout>




</ScrollView>