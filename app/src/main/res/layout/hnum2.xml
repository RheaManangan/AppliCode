<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282220">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginLeft="150dp"
            android:text="HTML"
            android:textColor="#FFFBFA"
            android:textSize="36dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="HTML Editors"
            android:textColor="#FFFBFA"
            android:textSize="32dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:text="Web pages can be created and modified by using professional HTML editors.
        "
            android:textColor="#FFFBFA"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:text="However, for learning HTML we recommend a simple text editor like Notepad (PC) or TextEdit (Mac)"
            android:textColor="#FFFBFA"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:text="Follow the steps below to create your first web page with Notepad or TextEdit."
            android:textColor="#FFFBFA"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:text="
Step 1: Open Notepad (PC):Windows 8 or later:"
            android:textColor="#FFFBFA"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_marginLeft="20dp"
            android:text="Open the Start Screen (the window symbol at the bottom left on your screen). Type Notepad.:Windows 7 or earlier:"
            android:textColor="#FFFBFA"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:text="Open Start > Programs > Accessories > Notepad"
            android:textColor="#FFFBFA"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:text="Step 1: Open TextEdit (Mac):Open Finder > Applications > TextEdit"
            android:textColor="#FFFBFA"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_marginLeft="20dp"
            android:text="Also change some preferences to get the application to save files correctly. In Preferences > Format > choose Plain Text"
            android:textColor="#FFFBFA"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:text=" Step 2: Write Some HTML: Write or copy the following HTML code into Notepad:
        "
            android:textColor="#FFFBFA"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:text=" Step 3: Save the HTML Page:Save the file on your computer. Select File > Save as in the Notepad menu.Name the file index.htm and set the encoding to UTF-8 (which is the preferred encoding for HTML files).
         "
            android:textColor="#FFFBFA"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>
         <TextView
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:text=" Step 4: View the HTML Page in Your Browser:Open the saved HTML file in your favorite browser (double click on the file, or right-click - and choose Open with).
       "
            android:textColor="#FFFBFA"
            android:textSize="26dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"/>









    </LinearLayout>




</ScrollView>